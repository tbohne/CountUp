<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.tbohne.countup.MainActivity"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#000000"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/results_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SUMMARY"
            android:textSize="20pt"
            android:textStyle="bold"
            android:textColor="#b9c7dd"
            android:gravity="center"
            android:layout_marginTop="20dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80dp">

            <TextView
                android:id="@+id/act0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACT 0:"
                android:textSize="16pt"
                android:textStyle="bold"
                android:textColor="#b9c7dd"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/act0_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="#b9c7dd"
                android:textSize="16pt"
                android:textStyle="bold"
                android:layout_alignTop="@+id/act0"
                android:layout_marginEnd="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp" />

            <TextView
                android:id="@+id/act1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACT 1:"
                android:textSize="16pt"
                android:textStyle="bold"
                android:textColor="#b9c7dd"
                android:layout_below="@id/act0"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/act1_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="#b9c7dd"
                android:textSize="16pt"
                android:textStyle="bold"
                android:layout_marginEnd="30dp"
                android:layout_below="@+id/act0_time"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp" />

            <TextView
                android:id="@+id/act2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACT 2:"
                android:textSize="16pt"
                android:textStyle="bold"
                android:textColor="#b9c7dd"
                android:layout_below="@id/act1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/act2_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="#b9c7dd"
                android:textSize="16pt"
                android:textStyle="bold"
                android:layout_marginEnd="30dp"
                android:layout_below="@+id/act1_time"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp" />

            <TextView
                android:id="@+id/act3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACT 3:"
                android:textSize="16pt"
                android:textStyle="bold"
                android:textColor="#b9c7dd"
                android:layout_below="@id/act2"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/act3_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="#b9c7dd"
                android:textSize="16pt"
                android:textStyle="bold"
                android:layout_marginEnd="30dp"
                android:layout_below="@+id/act2_time"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp" />

            <TextView
                android:id="@+id/act4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACT 4:"
                android:textSize="16pt"
                android:textStyle="bold"
                android:textColor="#b9c7dd"
                android:layout_below="@id/act3"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/act4_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="#b9c7dd"
                android:textSize="16pt"
                android:textStyle="bold"
                android:layout_marginEnd="30dp"
                android:layout_below="@+id/act3_time"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp" />

            <TextView
                android:id="@+id/act5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACT 5:"
                android:textSize="16pt"
                android:textStyle="bold"
                android:textColor="#b9c7dd"
                android:layout_below="@id/act4"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/act5_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="#b9c7dd"
                android:textSize="16pt"
                android:textStyle="bold"
                android:layout_marginEnd="30dp"
                android:layout_below="@+id/act4_time"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>