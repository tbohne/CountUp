<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.tbohne.countup.MainActivity"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#000000"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".MainActivity">

                <TextView
                    android:id="@+id/act0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACT 0"
                    android:textSize="22pt"
                    android:textStyle="bold"
                    android:textColor="#b9c7dd"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp" />

                <Chronometer
                    android:id="@+id/act0_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:textColor="#b9c7dd"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/act2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACT 2"
                    android:textSize="22pt"
                    android:textStyle="bold"
                    android:textColor="#b9c7dd"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp" />

                <Chronometer
                    android:id="@+id/act2_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:textColor="#b9c7dd"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/act4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACT 4"
                    android:textSize="22pt"
                    android:textStyle="bold"
                    android:textColor="#b9c7dd"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp" />

                <Chronometer
                    android:id="@+id/act4_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:textColor="#b9c7dd"
                    android:layout_gravity="center_horizontal" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context=".MainActivity">

                <TextView
                    android:id="@+id/act1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACT 1"
                    android:textSize="22pt"
                    android:textStyle="bold"
                    android:textColor="#b9c7dd"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp" />

                <Chronometer
                    android:id="@+id/act1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:textColor="#b9c7dd"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/act3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACT 3"
                    android:textSize="22pt"
                    android:textStyle="bold"
                    android:textColor="#b9c7dd"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp" />

                <Chronometer
                    android:id="@+id/act3_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:textColor="#b9c7dd"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/act5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACT 5"
                    android:textSize="22pt"
                    android:textStyle="bold"
                    android:textColor="#b9c7dd"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp" />

                <Chronometer
                    android:id="@+id/act5_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10pt"
                    android:textStyle="bold"
                    android:textColor="#b9c7dd"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/stop"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="22dp"
            android:text="Pause Session"/>

    </RelativeLayout>

</ScrollView>